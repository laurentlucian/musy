{
  "name": "musy",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "cross-env NODE_ENV=development bun server/index.ts",
    "start": "bun server/index.ts",
    "release": "fly deploy --remote-only",
    "release:local": "tsc --noEmit && fly deploy --local-only",
    "format": "biome format --write ./app",
    "lint": "biome lint",
    "lint:fix": "biome lint --write --unsafe",
    "typecheck": "react-router typegen && tsc --build --noEmit",
    "prod:db": "fly ssh console -C database-cli",
    "docker:build": "docker build -t musy .",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "prisma": {
    "schema": "./prisma/schema"
  },
  "dependencies": {
    "@ai-sdk/groq": "^1.2.8",
    "@ai-sdk/openai": "^1.3.21",
    "@ai-sdk/xai": "^1.2.15",
    "@mjackson/headers": "^0.10.0",
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-context-menu": "^2.2.10",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@react-router/express": "7.5.3",
    "@react-router/node": "7.5.3",
    "@t3-oss/env-core": "^0.13.0",
    "@tailwindcss/vite": "^4.1.5",
    "ai": "^4.3.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "intl-parse-accept-language": "^1.0.0",
    "is-ip": "^5.0.1",
    "isbot": "^5.1.27",
    "lucide-react": "^0.507.0",
    "morgan": "^1.10.0",
    "motion": "^12.9.4",
    "prisma": "6.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "7.5.3",
    "remix-auth": "^4.2.0",
    "remix-auth-oauth2": "^3.4.0",
    "remix-utils": "^8.5.0",
    "sonner": "^2.0.3",
    "spotified": "^1.1.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3",
    "valibot": "^1.0.0",
    "xstate": "^5.19.2",
    "ytmusic-api": "^5.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0-beta.2",
    "@react-router/dev": "7.5.3",
    "@types/compression": "^1.7.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/morgan": "^1.9.9",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "bun-types": "^1.2.11",
    "cross-env": "^7.0.3",
    "lint-staged": "^15.5.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
