{
  "name": "musy",
  "private": true,
  "description": "spotify & friends",
  "license": "",
  "sideEffects": false,
  "packageManager": "yarn@3.5.1",
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "dev": "prisma generate && prisma migrate dev && remix vite:dev",
    "deploy": "fly deploy --remote-only",
    "format": "prettier --write \"**/*.{ts,tsx,md,cjs,mjs}\"",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'update CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'update CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'update CHANGELOG.md' && npm version patch && git push origin && git push origin --tags",
    "prod:db": "fly ssh console -C database-cli",
    "find-deadcode": "yarn ts-prune --ignore 'app/routes|app/services|app/lib|app/root|app/context|app/entry.server.tsx|app/createEmotionCache'"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@prisma/client": "^3.15.2",
    "@remix-run/node": "^2.5.0",
    "@remix-run/react": "^2.5.0",
    "@remix-run/serve": "^2.5.0",
    "@remix-run/server-runtime": "^2.5.0",
    "@tanstack/react-virtual": "3.0.0-alpha.0",
    "better-logging": "^5.0.0",
    "bullmq": "^1.91.1",
    "clsx": "^2.1.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "framer-motion": "^8.5.5",
    "iconsax-react": "^0.0.8",
    "ioredis": "^5.3.2",
    "openai": "^3.3.0",
    "posthog-js": "^1.87.6",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "remix": "^2.5.0",
    "remix-auth": "^3.6.0",
    "remix-auth-oauth2": "^1.11.1",
    "remix-auth-spotify": "^1.3.2",
    "remix-typedjson": "^0.4.1",
    "remix-utils": "^7.5.0",
    "spotify-web-api-node": "^5.0.2",
    "supports-color": "^9.4.0",
    "tailwind-merge": "^2.2.0",
    "tiny-invariant": "^1.3.1",
    "zustand": "^4.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@commitlint/config-conventional": "^17.8.1",
    "@manypkg/cli": "^0.21.0",
    "@next/eslint-plugin-next": "^13.5.6",
    "@remix-run/dev": "^2.5.0",
    "@remix-run/eslint-config": "^2.5.0",
    "@types/react": "^18.2.34",
    "@types/react-color": "^3.0.9",
    "@types/react-dom": "^18.2.14",
    "@types/spotify-web-api-node": "^5.0.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "add": "^2.0.6",
    "autoprefixer": "latest",
    "commitlint": "^17.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-turbo": "^1.10.16",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-sort-keys": "2.3.5",
    "eslint-plugin-turbo": "^1.10.16",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "generate-changelog": "^1.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^3.15.2",
    "remix-development-tools": "3.7.2",
    "remix-flat-routes": "^0.6.4",
    "tailwindcss": "latest",
    "ts-prune": "^0.10.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.11",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "peerDependencies": {
    "zod": "3.19.1"
  },
  "engines": {
    "node": ">=18"
  }
}
