{
  "name": "musy",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "wrangler dev .output/server/index.mjs --assets .output/public",
    "typecheck": "react-router typegen && tsc",
    "preview": "wrangler dev .output/server/index.mjs --assets .output/public",
    "release": "wrangler deploy .output/server/index.mjs --assets .output/public",
    "format": "biome format --write ./app",
    "lint": "biome lint",
    "lint:fix": "biome lint --write --unsafe",
    "prisma:generate": "prisma generate  --schema=prisma/schema",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "db:migrate": "wrangler d1 migrations apply -c ./wrangler.jsonc --local musy",
    "typegen": "wrangler types -c ./wrangler.jsonc --env-interface Env",
    "env": "dotenv -e .env"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.24",
    "@ai-sdk/openai": "1.3.21",
    "@ai-sdk/xai": "^2.0.26",
    "@prisma/adapter-d1": "6.17.1",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.3",
    "@xstate/react": "6.0.0",
    "ai": "^5.0.76",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
    "lucide-react": "0.546.0",
    "motion": "12.23.24",
    "prisma": "^6.17.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router": "7.9.4",
    "remix-auth": "4.2.0",
    "remix-auth-oauth2": "3.4.1",
    "remix-utils": "9.0.0",
    "sonner": "2.0.7",
    "spotified": "1.1.5",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "valibot": "1.1.0",
    "xstate": "5.22.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@cloudflare/vite-plugin": "^1.13.13",
    "@hiogawa/vite-plugin-nitro": "0.0.3",
    "@react-router/dev": "7.9.4",
    "@react-router/fs-routes": "7.9.4",
    "@tailwindcss/vite": "4.1.15",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-rsc": "0.5.0",
    "typescript": "5.9.3",
    "vite": "7.1.11",
    "vite-tsconfig-paths": "5.1.4"
  },
  "overrides": {
    "use-sync-external-store": "1.5.0"
  },
  "patchedDependencies": {
    "spotified@1.1.5": "patches/spotified@1.1.5.patch"
  }
}
