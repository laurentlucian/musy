// https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client"
  previewFeatures = ["prismaSchemaFolder"]
  output          = "../../lib/services/db/generated.server"
  runtime         = "bun"
  moduleFormat    = "esm"
  engineType      = "binary"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
