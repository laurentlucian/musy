{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "tailwind.config.ts", "vite.config.ts"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["bun-types"],
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force"
  }
}
