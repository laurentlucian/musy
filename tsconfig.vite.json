{
  "extends": "./tsconfig.json",
  "include": [".react-router/types/**/*", "app/**/*", "lib/**/*"],
  "compilerOptions": {
    "composite": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["bun-types", "vite/client"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"],
      "@lib/*": ["./lib/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
